[auth]
### Local (port 8080 configured in config.toml).
redirect_uri = "http://localhost:8080/oauth2callback"

### Deployed to a load balancer backend.
# redirect_uri = "https://replace-with-the-deployed-app-url.example.com/oauth2callback"

# Cryptographically strong random value, used to sign cookies.
cookie_secret = "replace_with_a_secure_random_value"

[auth.google]
client_id = "replace_with_a_real_client_id.apps.googleusercontent.com"
client_secret = "replace_with_a_real_client_secret"
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"
client_kwargs = { "access_type" = "online", "prompt" = "select_account" }

#### Refs
# https://docs.streamlit.io/develop/api-reference/user/st.login
# https://developers.google.com/identity/openid-connect/openid-connect
# https://developers.google.com/identity/protocols/oauth2/web-server
# https://support.google.com/cloud/answer/15549257
